<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bentuk normal (tanpa hover) -->
    <item>
        <shape>
            <solid android:color="@color/edit_field_color" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/green_shade_medium_0" />
        </shape>
    </item>

    <!-- Bentuk untuk hover (hanya border) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Latar belakang transparan -->
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey" /> <!-- Warna border saat di-hover -->
        </shape>
    </item>
</layer-list>
