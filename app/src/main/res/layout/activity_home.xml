<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/background_gradient_end_color">

    <TextView
        android:id="@+id/nameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi" />

    <TextView
        android:id="@+id/namadokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Joko"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/nameDisplay"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/want_to_book_an_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:text="Selamat datang di Codoc"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/nameDisplay"
        app:layout_constraintTop_toBottomOf="@+id/nameDisplay" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/want_to_book_an_appointment"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/doctorData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="search"
            android:background="@drawable/editfield"
            android:drawableStart="@drawable/search"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/doctor_s_name_email_or_phone"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingVertical="16dp"
            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBuku"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorData" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/abu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    tools:layout_editor_absoluteX="117dp"
                    tools:layout_editor_absoluteY="126dp">


                    <ImageView
                        android:id="@+id/riwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/textriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Chat"
                        android:textSize="8dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    tools:layout_editor_absoluteX="117dp"
                    tools:layout_editor_absoluteY="126dp">


                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/home" />

                    <TextView
                        android:id="@+id/texthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Beranda"
                        android:textSize="8dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    tools:layout_editor_absoluteX="117dp"
                    tools:layout_editor_absoluteY="126dp">


                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/chat_light" />

                    <TextView
                        android:id="@+id/textchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Pesan"
                        android:textSize="8dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    tools:layout_editor_absoluteX="117dp"
                    tools:layout_editor_absoluteY="126dp">


                    <ImageView
                        android:id="@+id/lainnya"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/other_light" />

                    <TextView
                        android:id="@+id/textlainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Lainnya"
                        android:textSize="8dp" />
                </FrameLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>